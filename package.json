{
  "name": "gram-middleware",
  "version": "0.1.0",
  "description": "A lightweight, drop-in wrapper for AI SDKs that adds cost awareness, budget enforcement, and automatic optimization",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:fixup",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:fixup": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "ai",
    "openai",
    "anthropic",
    "cost",
    "budget",
    "middleware",
    "llm",
    "token",
    "pricing"
  ],
  "author": "Peter Abu <peter@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peteabu/gram-middleware"
  },
  "homepage": "https://github.com/peteabu/gram-middleware#readme",
  "bugs": {
    "url": "https://github.com/peteabu/gram-middleware/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "gram-library": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
